---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroTransition from '../components/HeroTransition.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header /> {/* Header is now a separate component */}
		<!-- Hero section with transition -->
			<HeroTransition /> {/* HeroTransition contains the sticky section and trigger */}
			
			<div id="portfolio" class="content-container">
				<!-- Portfolio content will go here -->
			</div>
		
		<Footer />
	</body>
</html>

<style>
.content-container {
  min-height: 100vh;
  width: 100%;
  padding: 2rem;
}
</style>
